<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    android:backgroundTint="@null"
    tools:context=".menu.MenuActivity"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/menuTitleTextView"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/the_game"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/menuPlayButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuPlayButton"
        style="@style/MenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/play"
        app:layout_constraintBottom_toTopOf="@+id/menuOpenCaseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuTitleTextView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuOpenCaseButton"
        style="@style/MenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opencase"
        app:layout_constraintBottom_toTopOf="@+id/menuSettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuPlayButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuSettingsButton"
        style="@style/MenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuOpenCaseButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuScoreBoardButton"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:background="@drawable/ic_baseline_emoji_events_24"
        android:backgroundTint="@null"
        app:backgroundTint="@color/white"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/menuSettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>